<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  -->
    <!--  -->
    <!-- Guidelines compat application theme. -->
    <!--  -->
    <!--  -->

    <!--  Theme: Light.DarkToolbar -->
    <style name="Theme.GuidelinesCompat.Light.DarkToolbar" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="windowActionModeOverlay">true</item>

        <!-- Actionbar styles -->
        <item name="actionBarTheme">@style/Theme.GuidelinesCompat.DarkToolbar</item>
        <item name="actionBarPopupTheme">@style/Theme.AppCompat</item>

        <!-- Action Mode styles -->
        <item name="actionModeStyle">@style/Widget.GuidelinesCompat.ActionMode</item>
        <item name="actionModeBackground">?colorAccent</item>
        <item name="actionModeCloseButtonStyle">@style/Widget.GuidelinesCompat.ActionButton.CloseMode</item>

        <!-- Toolbar styles -->
        <item name="toolbarStyle">@style/Widget.GuidelinesCompat.Toolbar</item>
        <item name="toolbarNavigationButtonStyle">@style/Widget.GuidelinesCompat.Toolbar.Button.Navigation</item>
        <item name="actionOverflowButtonStyle">@style/Widget.GuidelinesCompat.ActionButton.Overflow</item>

    </style>

    <!--  Theme: Light.LightToolbar -->
    <style name="Theme.GuidelinesCompat.Light.LightToolbar" parent="Theme.AppCompat.Light">

        <item name="windowActionModeOverlay">true</item>

        <!-- Actionbar styles -->
        <item name="actionBarTheme">@style/Theme.GuidelinesCompat.LightToolbar</item>
        <item name="actionBarPopupTheme">@style/Theme.AppCompat.Light</item>

        <!-- Action Mode styles -->
        <item name="actionModeStyle">@style/Widget.GuidelinesCompat.ActionMode</item>
        <item name="actionModeBackground">?colorAccent</item>
        <item name="actionModeCloseButtonStyle">@style/Widget.GuidelinesCompat.ActionButton.CloseMode</item>

        <!-- Toolbar styles -->
        <item name="toolbarStyle">@style/Widget.GuidelinesCompat.Toolbar</item>
        <item name="toolbarNavigationButtonStyle">@style/Widget.GuidelinesCompat.Toolbar.Button.Navigation</item>
        <item name="actionOverflowButtonStyle">@style/Widget.GuidelinesCompat.ActionButton.Overflow</item>

    </style>

    <!--  Theme: Light.ColoredToolbar -->
    <style name="Theme.GuidelinesCompat.Light.ColoredToolbar" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="windowActionModeOverlay">true</item>

        <item name="colorPrimaryDark">@color/primary_colored</item>
        <item name="colorPrimary">@color/primary_colored_dark</item>

        <!-- Actionbar styles -->
        <item name="actionBarTheme">@style/Theme.GuidelinesCompat.ColoredToolbar</item>
        <item name="actionBarPopupTheme">@style/Theme.AppCompat.Light</item>

        <!-- Action Mode styles -->
        <item name="actionModeStyle">@style/Widget.GuidelinesCompat.ActionMode</item>
        <item name="actionModeBackground">?colorAccent</item>
        <item name="actionModeCloseButtonStyle">@style/Widget.GuidelinesCompat.ActionButton.CloseMode</item>

        <!-- Toolbar styles -->
        <item name="toolbarStyle">@style/Widget.GuidelinesCompat.Toolbar</item>
        <item name="toolbarNavigationButtonStyle">@style/Widget.GuidelinesCompat.Toolbar.Button.Navigation</item>
        <item name="actionOverflowButtonStyle">@style/Widget.GuidelinesCompat.ActionButton.Overflow</item>

    </style>

    <!--  Theme: Dark.DarkToolbar -->
    <style name="Theme.GuidelinesCompat.Dark.DarkToolbar" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="windowActionModeOverlay">true</item>

        <!-- Actionbar styles -->
        <item name="actionBarTheme">@style/Theme.GuidelinesCompat.DarkToolbar</item>
        <item name="actionBarPopupTheme">@style/Theme.AppCompat</item>

        <!-- Action Mode styles -->
        <item name="actionModeStyle">@style/Widget.GuidelinesCompat.ActionMode</item>
        <item name="actionModeBackground">?colorAccent</item>
        <item name="actionModeCloseButtonStyle">@style/Widget.GuidelinesCompat.ActionButton.CloseMode</item>

        <!-- Toolbar styles -->
        <item name="toolbarStyle">@style/Widget.GuidelinesCompat.Toolbar</item>
        <item name="toolbarNavigationButtonStyle">@style/Widget.GuidelinesCompat.Toolbar.Button.Navigation</item>
        <item name="actionOverflowButtonStyle">@style/Widget.GuidelinesCompat.ActionButton.Overflow</item>

    </style>

    <!--  Theme: LightToolbar -->
    <style name="Theme.GuidelinesCompat.LightToolbar" parent="ThemeOverlay.AppCompat.ActionBar"/>

    <!--  Theme: DarkToolbar -->
    <style name="Theme.GuidelinesCompat.DarkToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <!--  Theme: ColoredToolbar -->
    <style name="Theme.GuidelinesCompat.ColoredToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

</resources>