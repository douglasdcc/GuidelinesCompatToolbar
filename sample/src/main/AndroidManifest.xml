<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lucasurbas.responsivetoolbar">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name">
        <activity
            android:name=".activity.ResponsiveToolbarActivity"
            android:label="@string/responsive_title"
            android:theme="@style/AppTheme.AppCompat.Responsive">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.DefaultToolbarActivity"
            android:label="@string/default_title"
            android:theme="@style/AppTheme.AppCompat.Default"/>
    </application>

</manifest>
