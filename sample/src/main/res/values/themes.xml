<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Popup" parent="Theme.AppCompat.Light">

    </style>

    <!--  -->
    <!--  -->
    <!-- Default application theme. -->
    <!--  -->
    <!--  -->

    <style name="Theme.Default" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="actionModeBackground">@color/colorAccent</item>

        <!-- Actionbar styles -->
        <item name="actionBarTheme">@style/Theme.Default.Toolbar</item>
        <item name="actionBarPopupTheme">@style/Theme.AppCompat.Light</item>

    </style>

    <style name="Theme.Default.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white</item>

    </style>

    <!--  -->
    <!--  -->
    <!-- Responsive application theme. -->
    <!--  -->
    <!--  -->

    <style name="Theme.GuidelinesCompat" parent="Theme.GuidelinesCompat.Light.ColoredToolbar">

        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="actionModeBackground">@color/colorAccent</item>

        <!-- Actionbar styles -->
        <item name="actionBarTheme">@style/Theme.GuidelinesCompat.Toolbar</item>

    </style>

    <style name="Theme.GuidelinesCompat.Toolbar" parent="Theme.GuidelinesCompat.ColoredToolbar">

        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white</item>

    </style>

</resources>